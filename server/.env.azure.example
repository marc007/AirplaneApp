# Azure App Service deployment template
# Copy this file to .env when running the API locally against Azure resources.
NODE_ENV=production
PORT=8080
FAA_DATASET_URL=https://registry.faa.gov/database/ReleasableAircraft.zip

# Azure Database for PostgreSQL connection string with SSL enforcement
# Replace <user>, <password>, <server>, and <database> with your values.
DATABASE_URL=postgresql://<user>:<password>@<server>.postgres.database.azure.com:5432/<database>?schema=public
DATABASE_SSL_MODE=require
DATABASE_CONNECTION_LIMIT=10

# Scheduler runs every 6 hours in production to refresh the FAA dataset
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL_MINUTES=360

# Application Insights configuration (optional but recommended)
APPINSIGHTS_CONNECTION_STRING=InstrumentationKey=00000000-0000-0000-0000-000000000000;IngestionEndpoint=https://<region>.in.applicationinsights.azure.com/
APPINSIGHTS_ROLE_NAME=airplanecheck-api
APPINSIGHTS_SAMPLING_PERCENTAGE=50
